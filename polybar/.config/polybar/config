icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 50
label-song-ellipsis = true

;----------------------------------------------------------
;		        W I N D O W
;----------------------------------------------------------
[module/window]
type = custom/script
interval = 1
format-prefix = " "
;label = %output:0:45:...%  %{B- -o -u}
label = %output:0:40:...%
click-left = ~/.config/polybar/scripts/janela.sh -i
click-middle = ~/.config/polybar/scripts/janela.sh -c
click-right = ~/.config/polybar/scripts/janela.sh -w
exec = ~/.config/polybar/scripts/janela.sh

;-------------------------------------------------------------------------
;					D I S C O
;-------------------------------------------------------------------------
[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted =  %percentage_used%%
label-unmounted =  %mountpoint% não montado
label-unmounted-foreground = ${colors.foreground-alt}

;-------------------------------------------------------------------------
;					C P U
;-------------------------------------------------------------------------
[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage:2%%

;-------------------------------------------------------------------------
;					M E M O R I A
;-------------------------------------------------------------------------
[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
label = %percentage_used%%

;-------------------------------------------------------------------------
;					R E D E
;-------------------------------------------------------------------------
[module/eth]
type = internal/network
interface = eno1
interval = 3.0

format-connected-prefix = net
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

;-------------------------------------------------------------------------
;					T E M P
;-------------------------------------------------------------------------
[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-warn = <label-warn>

label =  %temperature-c%
label-warn =  %temperature-c%
label-warn-foreground = ${colors.secondary}

;-------------------------------------------------------------------------
;					P U L S E
;-------------------------------------------------------------------------
[module/pulse]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = mudo
label-muted-foreground = #666

;-------------------------------------------------------------------------
;					D A T A
;-------------------------------------------------------------------------
[module/data]
type = internal/date
interval = 5

date =
date-alt = " %d-%m-%Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 

label = %date% %time%

