#!/usr/bin/env sh
#
# git-cron - Script para enviar automaticamente mudanças ao Github
# LEMBRE-SE DE CONFIGURAR CORRETAMENTE SEU GIT SEM SENHA!!!
#
# Desenvolvido por Lucas Saliés Brum <lucas@archlinux.com.br>
#
# Sugestão de crontab:
# */15 * * * * sh -c "~/.local/bin/git-cron" > /dev/null 2>&1
#
# Criado em: 20/12/2017 19:27:31
# Última Atualização: 08/01/2019 21:15:51

dir="${HOME}/github"
repos=('majestic' 'sistematico.github.io' 'oc-cli' 'cabron-bot' 'pollen' 'agressive' 'spamsentrybot' 'docker-arma3-exile')
remoto="nginx@hera"
dotfiles=1
icone="${HOME}/.local/share/icons/elementary/preferences-system-network.png"

if [ "$(readlink -- ${XDG_DATA_HOME:-$HOME/.local/share}/dbus-1/services/org.freedesktop.Notifications.service)" = "/usr/share/dbus-1/services/org.xfce.xfce4-notifyd.Notifications.service" ]; then
	icon=""
fi

atualiza() {
	if [ -d $1 ]; then
		if [ ! -f $1/.noup ]; then
			cd $1
			status=$(git add . -n)
			if [ ! -z "$status" ]; then
			c=$(echo $(git add . -n | tr '\r\n' ' '))
			m="Autocommit por Git-Cron: alterações: $c"
			git add .
			git commit -m "$m"
			git push
				#if [ "$DESKTOP_SESSION" == "i3" ]; then
				if xset q &>/dev/null; then
					# ls /usr/share/sounds/freedesktop/stereo/
					DISPLAY=:0 canberra-gtk-play -i complete 2>&1
					DISPLAY=:0 dbus-launch notify-send -i $icone "Git Cron" "Repo <b>$(basename $1)</b> atualizado."
				fi
			fi
		fi
	fi
}

if [ ! $1 ] || [ "$1" == "-a" ]; then
	for r in "${repos[@]}";	do
		caminho="${dir}/${r}"
		atualiza "$caminho"
	done

	[ $dotfiles = 1 ] && atualiza "${HOME}/.dotfiles"
	[ "$1" == "-a" ] && ssh $remoto "/usr/local/scripts/git-http"
elif [ ! $2 ]; then
	atualiza "$1"
else
	for r in "$@";	do
		caminho="${dir}/${r}"
		atualiza "$caminho"
	done
fi

