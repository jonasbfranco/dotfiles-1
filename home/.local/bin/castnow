#!/bin/bash

[ ! $1 ] && exit 1

arquivo="$1"
legenda=${arquivo%.*}.png
icone="${HOME}/.local/share/icons/elementary/preferences-system-network.png"

if [ ! -f $arquivo ]; then
	if xset q &>/dev/null; then
		canberra-gtk-play -i complete 2>&1
		dbus-launch notify-send -i $icone "CastNow" "O arquivo: $arquivo n達o existe."
	else
		echo "CastNow: O arquivo: $arquivo n達o existe."
	fi
	exit
fi

if [ ! -f $legenda ]; then
	if xset q &>/dev/null; then
		canberra-gtk-play -i complete 2>&1
		dbus-launch notify-send -i $icone "CastNow" "A legenda: $legenda n達o existe."
	else
		echo "CastNow: A legenda: $legenda n達o existe."
	fi
fi

/usr/bin/castnow