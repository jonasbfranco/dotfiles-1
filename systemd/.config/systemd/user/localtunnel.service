[Unit]
Description=Share local port(s) with ngrok
After=syslog.target network.target

[Service]
PrivateTmp=true
Type=simple
Restart=always
RestartSec=1min
StandardOutput=null
StandardError=null
ExecStart=lt --port 80 --subdomain majestic
ExecStop=/usr/bin/killall lt

[Install]
WantedBy=multi-user.target
